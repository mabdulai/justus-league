---
import Layout from '../layouts/NPC.astro';
import styles from '../styles/Character.module.css';
import shieldCoster from '@assets/images/shield-coster.png';
import barthens from '@assets/images/barthens.png';
import stonehill from '@assets/images/stonehill.png';
import tresendar from '@assets/images/tresendar.png';
import cragmawCave from '@assets/images/cragmaw-cave.jpg';
import thundertree from '@assets/images/thundertree.png';
import treePortal from '@assets/images/portal-tree.png';
import cragmawCastle from '@assets/images/cragmaw-castle.png';
import phandalin from '@assets/images/phandalin.png';
import overworld from '@assets/images/overworld.jpg';
import { Image } from 'astro:assets';
---

<Layout title="Locations" description="Overzicht van al onze lokaties">
    <div class={styles.cards}></div>
    <h2>Phandalin - Overview</h2>
    <Image src={phandalin} alt="Phandalin Overview" />
    <h2>Overworld</h2>
    <Image src={overworld} alt="Overworld" />
    <h2>Cragmaw's Hideout</h2>
    <Image src={cragmawCave} alt="Cragmaw's Hideout" />
    <hr />
    <h2>Shield Coster - Trading Company</h2>
    <Image src={shieldCoster} alt="Shield Coster - Trading Company" />
    <hr />
    <h2>Barthens Provisions</h2>
    <Image src={barthens} alt="Barthens Provisions" />
    <hr />
    <h2>Stonehill Inn</h2>
    <Image src={stonehill} alt="Stonehill Inn" />
    <h2>Tresendar Manor</h2>
    <Image src={tresendar} alt="Tresendar Manor" />
    <h2>Thundertree</h2>
    <Image src={thundertree} alt="Thundertree" />
    <h2>Cragmaw Castle</h2>
    <Image src={cragmawCastle} alt="Cragmaw Castle" />
    <h2>Tree Portal</h2>
    <Image src={treePortal} alt="Tree Portal" />
</Layout>
